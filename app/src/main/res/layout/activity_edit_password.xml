<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPassword"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/nav">
        <ImageButton
            android:id="@+id/changePasswordBackBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back_2"
            android:background="@color/nav"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Change Password"
            android:textColor="@color/bgColor"
            android:textSize="18dp"
            android:layout_marginStart="83dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded">
            <EditText
                android:id="@+id/passwordField"
                android:layout_toStartOf="@+id/pwIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Enter new password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                />
            <ImageView
                android:id="@+id/pwIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/password_show"
                android:adjustViewBounds="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded">
            <EditText
                android:id="@+id/conPasswordField"
                android:layout_toStartOf="@+id/conPasswordIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Enter Current Password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
            <ImageView
                android:id="@+id/conPasswordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/password_show"
                android:adjustViewBounds="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btnChangePw"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_carousel"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Change"
            android:textColor="@color/bgColor"
            android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>