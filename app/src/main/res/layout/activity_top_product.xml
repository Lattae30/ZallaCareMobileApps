<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopProduct"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/square_bg">
        <ImageView
            android:id="@+id/topProductBackBtn"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_back_2"
            android:backgroundTint="@color/primary_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Zalla's Top Products"
            android:textColor="@color/primary_2"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="52dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:animateLayoutChanges="true"
                android:paddingStart="5dp"
                android:paddingBottom="25dp"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCasualBeigeShirt"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:src="@drawable/casual_beige_shirt_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Casual Beige Shirt"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rp. 85.000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_casual_Beige"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/button_pink_nav"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Buy Now"
                        android:textColor="@color/bgColor"
                        android:textSize="10dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWhiteShortBlouse"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:layout_constraintStart_toEndOf="@+id/cardCasualBeigeShirt">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:src="@drawable/white_short_blouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="White Short Blouse"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rp. 70.000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_white_short_blouse"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/button_pink_nav"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Buy Now"
                        android:textColor="@color/bgColor"
                        android:textSize="10dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardKimonoBlouse"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardCasualBeigeShirt">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:src="@drawable/kimono_blouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Kimono Blouse"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rp. 90.000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_kimono_blouse"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/button_pink_nav"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Buy Now"
                        android:textColor="@color/bgColor"
                        android:textSize="10dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMaroonVneck"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:layout_constraintStart_toEndOf="@+id/cardKimonoBlouse"
                    app:layout_constraintTop_toBottomOf="@id/cardWhiteShortBlouse">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:src="@drawable/maroon_blouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Maroon V-neck Blouse"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rp. 80.000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_maroon_blouse"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/button_pink_nav"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Buy Now"
                        android:textColor="@color/bgColor"
                        android:textSize="10dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBlackBronNeckBlouse"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardKimonoBlouse">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:src="@drawable/brown_neck_blouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Black Brown Neck Blouse"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rp. 75.000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_brown_neck_blouse"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/button_pink_nav"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Buy Now"
                        android:textColor="@color/bgColor"
                        android:textSize="10dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVintageBlouse"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:layout_constraintStart_toEndOf="@+id/cardBlackBronNeckBlouse"
                    app:layout_constraintTop_toBottomOf="@+id/cardMaroonVneck">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:src="@drawable/vintage_blouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Vintage Blouse"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Rp. 90.000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_vintage_blouse"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/button_pink_nav"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Buy Now"
                        android:textColor="@color/bgColor"
                        android:textSize="10dp" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>